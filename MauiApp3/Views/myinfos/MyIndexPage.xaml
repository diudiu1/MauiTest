<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.MyIndexPage"
             Shell.NavBarIsVisible="true"
             Shell.TabBarIsVisible="true"
             xmlns:viewmodel="clr-namespace:MauiApp3.ViewModels"
             Title="MyIndexPage">
    <VerticalStackLayout>
        <ActivityIndicator IsRunning="{Binding IsRunning}" />
        <Image Source="{Binding AvatarUrl}" Aspect="AspectFill" HeightRequest="80" WidthRequest="80">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MyIndexPageViewModel}}, Path=CheckFileCommand}" />
            </Image.GestureRecognizers>
        </Image>
        
        <Label Text="{Binding UserName}" VerticalOptions="Center"  HorizontalOptions="Center" />
        <Label Text="{Binding Name}" VerticalOptions="Center" HorizontalOptions="Center" />

        <Button Text="退出登录" Command="{Binding ClearCommand}"  />
        <Button Text="测试" Command="{Binding TestCommand}"  />
    </VerticalStackLayout>
</ContentPage>