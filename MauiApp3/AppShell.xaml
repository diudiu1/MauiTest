<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp3"
    
    >
    <TabBar>
        <ShellContent Title="首页"
                     Icon="cat.png"
                     ContentTemplate="{DataTemplate local:HomePage}" />
        <ShellContent Title="购物"
                     Icon="dog.png"
                     ContentTemplate="{DataTemplate local:ProductListPage}" />
        <ShellContent Title="消息"
                     Icon="monkey.png"
                     ContentTemplate="{DataTemplate local:MessagePage}" />
        <ShellContent Title="我"
                     Icon="monkey.png"
                     ContentTemplate="{DataTemplate local:MyIndexPage}" />
    </TabBar>
    

</Shell>
